{{ form_start(formFeed, {'attr': {'class': 'formAjax '}}) }}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Nouveau flux</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="input-group" style="width: 100%;">
                {{ form_row(formFeed.title) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group" style="width: 100%;">
                {{ form_row(formFeed.url) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group" style="width: 100%;">
                {{ form_row(formFeed.count) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group colorpicker-component" style="width: 100%;">
                {{ form_row(formFeed.color) }}
                <span class="input-group-addon"><i></i></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal" style="float: left;">Annuler</button>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </div>
{{ form_end(formFeed) }}